<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/item_update_password"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@color/Yellow"
            android:text="密码重置"
            android:textSize="20sp"/>
        <TextView
            android:gravity="center"
            android:id="@+id/item_delete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/Red"
            android:text="删除"
            android:textSize="20sp" />
    </LinearLayout>
    <RelativeLayout
        android:clickable="true"
        android:id="@+id/item_content"
        android:background="@color/colorCardWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_account_profile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/user" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="127dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_account_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="用户名"
                android:textColor="@color/text_color_primary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="姓名"
                android:textColor="@color/text_secondary"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_account_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="29dp"
            android:textSize="16dp"
            android:text="00000000000" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="@color/gap_color" />
    </RelativeLayout>

</FrameLayout>